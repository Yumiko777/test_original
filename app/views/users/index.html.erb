<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>ユーザ一覧Users#index</h2>
      <h4>ユーザー検索</h4>
      <%=  search_form_for @search do |form| %>
        <%= form.label :name_cont, 'ユーザー名' %>
        <%= form.search_field :username_cont %>
        <%= form.submit '検索', class: "btn btn-success" %>
      <% end %>
      <br>
      <table class="table table-bordered table-striped">
        <thead class="thead-light">
          <tr>
            <th><div class="text-center"><%= sort_link(@search, :username, "ユーザー名", hide_indicator: true) %></div></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td ><div class="text-center"><%= user.username %></div></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
