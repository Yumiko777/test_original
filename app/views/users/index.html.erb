<div class="container mt-5">
  <div class="row">
    <div class="col-7 mx-auto">
      <h2><span class="text-danger" data-html="true" data-toggle="tooltip" data-placement="right" title="出退勤を管理するものでは<br/>ありません!<br/>出勤状況が退勤になっている方には電話を控えましょう。"><%= t('view.user_index') %></span></h2>
      <br>
      <h5><%= t('view.user_search') %></h5>
      <dl class="searchbox">
      <%=  search_form_for @q do |form| %>
        <dt><%= form.search_field :username_cont,placeholder: '検索するユーザー名を入力...' %></dt>
        <dd><%= form.submit t('view.search'), class: 'search-btn' %></dd>
      <% end %>
      </dl>
      <br>
      <table class="table table-hover">
        <thead class="table-success">
          <tr>
            <th><div class="text-center"><%=  t('view.username') %></div></th>
            <th><div class="text-center"><%= t('view.title') %></div></th>
            <th><div class="text-center"><%= t('view.business_status') %></div></th>
            <th><div class="text-center"><%= t('view.business_create') %></div></th>
          </tr>
        </thead>
        <tbody>
          <% @businesses.each do |business| %>
            <% if business.created_at.strftime("%m-%d") == Date.current.strftime("%m-%d") %>
            <tr>
              <td ><div class="text-center"><%= business.user.username %></div></td>
              <td ><div class="text-center"><%= business.title %></div></td>
              <td ><div class="text-center"><%= business.status_i18n %></div></td>
              <td ><div class="text-center"><%= l business.created_at %></div></td>
            <tr>
            <% end %>
          <% end %>
          <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
          <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
          <script>$('[data-toggle="tooltip"]').tooltip()</script>
        </tbody>
      </table>
    </div>
  </div>
</div>
