<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2><%= t('view.user_index') %></h2>
      <h4><%= t('view.user_search') %></h4>
      <dl class="searchbox">
      <%=  search_form_for @search do |form| %>
        <%#= form.label :name_cont, t('view.username') %>
        <dt><%= form.search_field :username_cont,placeholder: '検索するユーザー名を入力...' %></dt>
        <dd><%= form.submit t('view.search'), class: 'search-btn' %></dd>
      <% end %>
      </dl>
      <br>
      <table class="table table-bordered table-striped">
        <thead class="table-success">
          <tr>
            <th><div class="text-center"><%= sort_link(@search, :username, t('view.username'), hide_indicator: true) %></div></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <%# if @business.user_id == currentuser.id %>
          <tr>
            <td ><div class="text-center"><%= user.username %></div></td>
            <td ><%#= link_to "出勤状況", businesses_path %></td>
            <td ><%#= link_to "出勤状況", business_path(business.id) %></td>
            <td ><%= link_to "出勤状況", businesses_path(@business) %></td>
            <td ><%#= link_to "出勤状況", business_path(user) %></td>
            <td ><%#= link_to "出勤状況", business_path(user_id: @user.id) %></td>

<%# end %>
          <tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
