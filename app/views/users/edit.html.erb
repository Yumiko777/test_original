<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2><%= t('view.user_edit') %></h2>

      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %><%= t('view.error') %></h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <%= form_with(model: @user, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :username, t('view.username'), class: "label" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, t('view.email'), class: "label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div>
          <%= f.submit t('view.submit'), class: "btn btn-success" %>
          <%= link_to t('view.back'), user_path(current_user), class: "btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
