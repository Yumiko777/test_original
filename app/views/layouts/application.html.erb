<!DOCTYPE html>
<html>
  <head>
    <title>TestOriginal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if flash[:notice] %>
      <div class="alert alert-primary" role="alert"><strong><%= notice %></strong></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert"><strong><%= alert %></strong></div>
    <% end %>



    <%= link_to root_path, class: "navbar-item" do %>
      <h1 class="title" style="font-family: cursive;">TeamWORK</h1>
    <% end %>



    <% if user_signed_in? %>
<%= link_to "ユーザ一覧", users_path, class: "navbar-item button is-warning is-light" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
    <% else %>
    <%= link_to "ユーザ一覧", users_path, class: "navbar-item button is-warning is-light" %>
      <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>

        <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
     <% end %>




    <%= yield %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  </body>
</html>
