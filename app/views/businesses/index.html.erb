<p id="notice"><%= notice %></p>

<div class="container mt-5">
  <div class="row">
    <div class="col-7 mx-auto">
      <h2><%= @current_user.username %>:<%= t('view.business_index') %></h2>

      <table class="table table-hover">
        <thead class="table-success">
          <tr>
            <th><div class="text-center"><%= t('view.title') %></div></th>
            <th><div class="text-center"><%= t('view.business_status') %></div></th>
            <th><div class="text-center"><%= t('view.business_create') %></div></th>
            <th><div class="text-center"><%= t('view.business_update') %></div></th>
            <th><div class="text-center"><i class="fa fa-edit"></i></div></th>
            <th><div class="text-center"><i class="fa fa-trash-alt"></i></div></th>
          </tr>
        </thead>
        <tbody>
          <% @businesses.each do |business| %>
            <tr>
              <td><div class="text-center"><%= business.title %></div></td>
              <td><div class="text-center"><%= business.status_i18n %></div></td>
              <td><div class="text-center"><%= l business.created_at %></div></td>
              <td><div class="text-center"><%= l business.updated_at %></div></td>
            <% if current_user.id == business.user_id %>
             <td ><div class="text-center"></div><%= link_to t('view.edit'), edit_business_path(business) %></td>
              <td><div class="text-center"><%= link_to t('view.delete'), business,  method: :delete, data: {confirm: t('view.Are you sure?'),cancel: 'キャンセル',commit: '削除する'},title: '削除確認'%></div></td>
            <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to t('view.business_new'), new_business_path ,class: "btn btn-success"%>
    </div>
  </div>
</div>
