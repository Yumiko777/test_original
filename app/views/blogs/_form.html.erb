<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= blog.errors.count %><%= t('view.error') %></h2>
      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t('view.title') %><br />
    <%= form.text_field :title, :placeholder => "例）連絡事項", class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label t('view.content') %><br />
    <%= form.text_area :content, :placeholder => "例）時間厳守でお願いいたします", class: "form-control" %>
  </div>

  <div class="actions"><br />
    <%= form.submit t('view.blog_submit'), class: "btn btn-success" %>
  </div>
<% end %>
