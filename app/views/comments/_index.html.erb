<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= link_to "#{comment.user.username}さん", user_path(comment.user.id) %></p>
        <p><%= t('view.comment') %>:<%= comment.content %></p>
        <p><%= t('view.blog_date') %>:<%= comment.updated_at.strftime("%m-%d %H:%M") %></p>
        <% if comment.user == current_user %>
          <p><%= link_to t('view.comment_edit'), edit_blog_comment_path(blog, comment), remote: true %></p>
          <p><%= link_to t('view.comment_delete'), blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true,data: { confirm: t('view.Are you sure?'),cancel: 'キャンセル',commit: '削除する'},title: '削除確認'%></p>
      </li>
        <% end %>
    <% end %>
  <% end %>
</ul>
