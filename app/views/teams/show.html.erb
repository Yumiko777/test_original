<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>Team: <%= @team.name %></h2>
    </div>
  </div>
</div>

<div class="col-9 mx-auto mt-5">
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col"><%= t('view.username') %></th>
        <th scope="col"><%= t('view.email') %></th>
        <th scope="col"><%= t('view.work') %></th>
      </tr>
    </thead>
    <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.user.username %></td>
        <td><%= member.user.email %></td>
        <td><%= link_to t('view.today_work'), user_path(member.user_id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% if current_user == @team.user %>
  <%= link_to t('view.member_list'),  team_members_path(@team.id), class: "btn btn-success" %>
    <%= link_to t('view.member_add'), new_team_member_path(team_id: @team.id), class: "btn btn-success" %>
    <%= link_to t('view.team_edit'), edit_team_path(@team), class: "btn btn-success" %>
    <%= link_to t('view.team_delete'),team_path(@team.id), method: :delete,data: {confirm: t('view.Are you sure?'),cancel: 'キャンセル',commit: '削除する'},title: '削除確認' , class: "btn btn-danger"%>
  <% end %>
    <%= link_to t('view.back'), teams_path, class: "btn btn-outline-success" %>
</div>
