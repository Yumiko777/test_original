<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2><%= t('view.member_list') %></h2>
      <h2>Team: <%=link_to @team.name, team_path(@team) %></h2>
    </div>
  </div>
</div>
<div class="col-9 mx-auto mt-5">
  <table class="table table-hover">
    <thead class="table-success">
      <tr>
        <th scope="col"><%= t('view.username') %></th>
        <th scope="col"><%= t('view.email') %></th>
      </tr>
    </thead>
    <tbody>
    <% @team.members.each do |member| %>
      <tr>
        <td><%= member.user.username %></td>
        <td><%= member.user.email %></td>
        <td><%= link_to t('view.member_delete'), team_member_path(team_id: member.team.id , id: member.id), method: :delete,data: {confirm: t('view.Are you sure?'),cancel: 'キャンセル',commit: '削除する'},title: '削除確認' , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to t('view.back'), team_path(@team), class: "btn btn-outline-success" %>
</div>
