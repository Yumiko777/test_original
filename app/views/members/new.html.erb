<h1>Members#new</h1>

<div class="container">
  <div class="form">
    <%= form_with(model: @team ,url: team_members_path ,method: :post, local: true) do |form| %>
      <% if @team.errors.any? %>
        <h2><%= pluralize(@team.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
        <ul>
          <% @team.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= form.label :メンバー名 %>
        <%= form.collection_check_boxes(:selected_user_ids, @users, :id, :username) do |user| %>
          <% user.label { user.check_box + user.text } %>
        <% end %>
      </div>
      <div class="form-group">
        <%= form.submit "更新", class: "btn btn-success" %>
        <%= link_to "戻る", teams_path, class: "btn btn-outline-success" %>
      </div>
    <% end %>
  </div>
</div>
