<div class="container">
  <div class="form">

  <h3><%= t('view.member_add') %></h3>
  <div class="container">
    <div class="form">
      <%= form_with(model: @team ,url: team_members_path ,method: :post, local: true) do |form| %>
        <% if @team.errors.any? %>
          <h2><%= @team.errors.count %><%= t('view.error') %></h2>
          <ul>
            <% @team.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <div class="form-group">
          <%= form.label t('view.member_name') %>
          <br>
          <%= form.collection_check_boxes(:selected_user_ids, @users, :id, :username) do |user| %>
            <% user.label { user.check_box + user.text } %>
          <% end %>
        </div>
        <div class="form-group">
          <%= form.submit t('view.submit'), class: "btn btn-success" %>
          <%= link_to t('view.back'), teams_path, class: "btn btn-outline-success" %>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>
