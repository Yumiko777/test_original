<% if @work.errors.any? %>
  <h2><%= @work.errors.count %><%= t('view.error') %></h2>
    <ul>
      <% @work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="title">
  <div class="form-tag"><%= t('view.title') %></div>
    <%= form.text_field :title , :placeholder => "例）経費申請",class: "form-control"  %>
</div>

<div class="content">
  <div class="form-tag"><%= t('view.content') %></div>
    <%= form.text_field :content, :placeholder => "例）交通費",class: "form-control" %>
</div>

<div class="time">
  <div class="form-tag"><%= t('view.start_time') %></div>
    <%= form.date_field :start_time %>
</div>

<div class="status">
	<div class="form-tag"><%= t('view.work_status') %></div>
    <%= radio_button_tag :status,false, {:checked => true}  %>
    <%= label_tag :status, t('view.work_false') %>
    <%= radio_button_tag :status,true %>
		<%= label_tag :status, t('view.work_true') %>
</div>

<div class="remarks">
  <div class="form-tag"><%= t('view.remarks') %></div>
    <%= form.text_field :remarks, :placeholder => "例）午前中に処理が必要",class: "form-control" %>
</div>

<% if local_assigns[:edit_flag].present? %>
  <div class="submit">
    <%= form.submit t('view.edit'), class: "btn btn-success" %>
    <%= link_to t('view.back'), works_path, class: "btn btn-outline-success" %>
  </div>
<% else %>
  <br>
  <div class="submit">
    <%= form.submit t('view.work_submit'), class: "btn btn-success" %>
<% end %>
</div>
