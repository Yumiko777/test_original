    <ul>
      <% @work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="title">
  <div class="form-tag">タイトル</div>
    <%= form.text_field :title ,:placeholder => "作業終了" %>
</div>

<div class="content">
  <div class="form-tag">内容</div>
    <%= form.text_field :content ,:placeholder => "本日の作業は終了しました！" %>
</div>

<div class="time">
  <div class="form-tag">日程</div>
    <%= form.date_select :start_time %>
</div>

<div class="status">
	<div class="form-tag">状態</div>
    <%= radio_button_tag :status,false, {:checked => true}  %>
    <%= label_tag :status, '未済' %>
    <%= radio_button_tag :status,true %>
		<%= label_tag :status, '済' %>
</div>

<div class="remarks">
  <div class="form-tag">備考</div>
    <%= form.text_field :remarks %>
</div>

 <% if local_assigns[:edit_flag].present? %>
  <div class="submit">
    <%= form.submit "編集", class: "btn btn-success" %>
    <%= link_to "戻る", works_path, class: "btn btn-outline-success" %>
  </div>
<% else %>
  <br>
  <div class="submit">
    <%= form.submit "新規作成", class: "btn btn-success" %>
<% end %>
  </div>
