<% if @work.errors.any? %>
  <h2><%= pluralize(@work.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with(model: @work, local: true) do |form| %>

  <div class="title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :title %>
  </div>

  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content %>
  </div>

  <div class="time">
    <div class="form-tag">日程</div>
    <%= form.date_select :start_time %>
  </div>

  <div class="status">
    <div class="form-tag">状態</div>
      <%= form.radio_button :status, "未済" %>未済<%= form.radio_button :status, "済" %>済
  </div>

  <div class="remarks">
    <div class="form-tag">備考</div>
      <%= form.text_field :remarks %>
  </div>

  <br>
  <div class="submit">
    <%= form.submit "編集" %>
    <%= link_to "戻る", works_path %>
  </div>

  <button type="button" class="btn btn-info btn-sm"><%= link_to '編集', @wore %></button>
<% end %>
